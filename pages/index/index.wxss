@import '../../assets/css/common.wxss';
/**index.wxss**/
.swiper{width: 100%;height: 160px;}
.slide-image{width: 100%;height: 160px;}

.wx-pannel{
  background-color: #fff;
  margin-top: 20rpx;
}
.wx-pannel .wx-title{
  font-size: 30rpx;
  padding-left: 30rpx;
  border-bottom: 1rpx solid #e7e7e7;
  line-height: 100rpx;
}
.commod-box{
  display: inline-block;
  width: 140rpx;
  margin: 40rpx 0 40rpx 30rpx;
  float: left;
}
.commod-box .background{
  display: block;
  width: 140rpx;
  height: 140rpx;

}
.commod-box .commodname{
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
}
.searchbox{
	padding: 10px;
	border-bottom: 1px #e8e8e8 solid;
  background-color: #fff;
}
.searchbox input{
	width: 100%;
	height: 35px;
	line-height: 35px;
	padding-left: 40px;
	border:none;
	border-radius: 5px;
	background-color: #f6f6f6;
  box-sizing: border-box;
}
.searchbox .iconfont{
	position: absolute;
	left: 18px;
  top: 18px;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
}